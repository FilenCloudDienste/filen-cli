{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"lib": ["ES2017", "DOM"],
		"module": "commonjs",
		"target": "ES2017",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true
	},
	"ts-node": {
		"files": true
	},
	"include": ["src", "index.d.ts"]
}
